<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">

    <TextView
        android:id="@+id/deaseId"
        style="@style/DeaseProjectInfoStyle"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:text="1" />

    <TextView
        android:id="@+id/tv_dease_type_number"
        style="@style/DeaseProjectInfoStyle"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:text="A3001_1_1" />

    <TextView
        android:id="@+id/tv_dease_project_name"
        style="@style/DeaseProjectInfoStyle"
        android:layout_width="0dp"
        android:layout_weight="2.0"
        android:text="检查进水情况恩恩恩恩恩恩" />

    <TextView
        android:id="@+id/tv_dease_unit"
        style="@style/DeaseProjectInfoStyle"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:text="km.年" />

    <TextView
        android:id="@+id/tv_dease_project_number"
        style="@style/DeaseProjectInfoStyle"
        android:layout_width="0dp"
        android:layout_weight="1.0"
        android:text="3" />

</LinearLayout>