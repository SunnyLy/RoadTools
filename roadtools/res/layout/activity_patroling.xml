<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4" >

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="matrix"
        android:src="@drawable/map_bg" />
  <TextView android:background="@drawable/cab_background_top_holo_dark"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="日常巡查"
        android:textColor="#ffffff"
        android:textSize="20sp" />
    <Button
        android:id="@+id/add_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/cab_background_top_holo_dark"
        android:drawableRight="@drawable/ic_input_add"
        android:onClick="mOnClick"
        android:padding="10dp" />

    <Button
        android:id="@+id/take_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/cab_background_top_holo_dark"
        android:drawableLeft="@drawable/device_access_camera64"
        android:onClick="mOnClick"
        android:padding="10dp" />

    <TextView
        android:id="@+id/gps_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="正在巡查中..."
        android:textColor="#cc002e3e"
        android:textSize="14sp" />

   <!--  <com.changshagaosu.roadtools.ui.view.Power -->
   <!-- <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/gif042" /> -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/stop_btn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#cc002e3e"
            android:onClick="mOnClick"
            android:text="结束巡查"
            android:textColor="#f4f4f4"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="#33b5e5" />

        <View
            android:layout_width="2dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="#33b5e5" />

        <Button
            android:id="@+id/disease_btn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#cc002e3e"
            android:onClick="mOnClick"
            android:text="病害上报"
            android:textColor="#f4f4f4"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/start_ibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/play_button_bg"
        android:src="@drawable/playing_button" />

</RelativeLayout>