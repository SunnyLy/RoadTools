<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dog_logo" >

    <Button
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/cab_background_top_holo_dark" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="50dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.0dip"
            android:layout_marginBottom="10dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="42.0dip"
                android:background="#ffffff"
                android:gravity="left|center"
                android:paddingLeft="9.0dip"
                android:paddingRight="9.0dip"
                android:singleLine="true"
                android:text="FTP:"
                android:textColor="@android:color/black"
                android:textSize="14.0sp" />

            <Spinner
                android:id="@+id/server_spinner"
                android:layout_width="fill_parent"
                android:layout_height="42.0dip"
                android:layout_toLeftOf="@+id/add_btn"
                android:layout_toRightOf="@+id/text"
                android:background="@drawable/abc_spinner_ab_default_holo_dark"
                android:gravity="left|center"
                android:paddingLeft="9.0dip"
                android:paddingRight="9.0dip"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14.0sp" />

            <ImageButton
                android:id="@+id/add_btn"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login"
                android:onClick="mOnClick"
                android:src="@drawable/content_new" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42.0dip"
            android:layout_marginBottom="10dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/text_1"
                android:layout_width="wrap_content"
                android:layout_height="42.0dip"
                android:background="#ffffff"
                android:gravity="left|center"
                android:paddingLeft="9.0dip"
                android:paddingRight="9.0dip"
                android:singleLine="true"
                android:text="服务器:"
                android:textColor="@android:color/black"
                android:textSize="14.0sp" />

            <Spinner
                android:id="@+id/server_spinner_1"
                android:layout_width="fill_parent"
                android:layout_height="42.0dip"
                android:layout_toLeftOf="@+id/add_btn_1"
                android:layout_toRightOf="@+id/text_1"
                android:background="@drawable/abc_spinner_ab_default_holo_dark"
                android:gravity="left|center"
                android:paddingLeft="9.0dip"
                android:paddingRight="9.0dip"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="14.0sp" />

            <ImageButton
                android:id="@+id/add_btn_1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/login"
                android:onClick="mOnClick"
                android:src="@drawable/content_new" />
        </RelativeLayout>

        <EditText
            android:id="@+id/username_et"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background_2"
            android:hint="请在此输入用户名"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="14sp" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/password_et"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_background_2"
            android:hint="请在此输入密码"
            android:padding="10dp"
            android:password="true"
            android:singleLine="true"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:background="#99002e3e"
            android:onClick="mOnClick"
            android:padding="5dp"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>