<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dog_logo" >

    <Button
        android:id="@+id/settings_btn"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/cab_background_top_holo_dark"
        android:drawableRight="@drawable/action_settings"
        android:onClick="mOnClick" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:indeterminateDrawable="@drawable/progress_large_holo"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/refresh_iv"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:src="@drawable/navigation_refresh_1"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:padding="50dp" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="请填写巡查人员："
            android:textColor="#f4f4f4"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/user_et"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background_2"
            android:hint="巡查人员"
            android:padding="10dp"
            android:textColor="#000000"
            android:textSize="14sp" />

        <Button
            android:id="@+id/ok_btn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:background="#99002e3e"
            android:onClick="mOnClick"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <Button
            android:padding="5dp"
            android:drawableRight="@drawable/ic_action_location"
            android:drawableLeft="@drawable/ic_action_location"
            android:id="@+id/checkin_btn"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#cc002e3e"
            android:onClick="mOnClick"
            android:text="签到"
            android:textColor="#f4f4f4"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>